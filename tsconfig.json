{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "lib": [
      "DOM",
      "ES2022"
    ],
    "allowJs": true,
    "sourceMap": true,
    "rootDir": "./scripts",
    "outDir": "./output",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}